{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Debug build with debug information",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/out/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "GLFW_BUILD_WAYLAND": "OFF"
            }
        }
    ]
}